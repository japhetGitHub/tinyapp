<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="icon" type="image/png" href="/favicon_io/favicon-16x16.png">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>
</head>
<body style="background-color: rgb(202, 187, 168);">
  <%- include('partials/_header.ejs') %>
  <main class="card border-light" style="margin: 1em; background-color: #dacdbd;">
    <h3 class="card-header">My URLs</h3>
    <% if (code >= 400 && code < 500) { %>
      <%- include('partials/_error.ejs') %> 
    <% } %>
    <table class="table">
      <thead class="card-body">
        <tr class="card-text">
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Created/Modified On</th>
          <th scope="col">Visits</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody class="card-footer">
        <% for(let url in urls) { %>
          <tr class="text-left">
            <td><a href=<%= `/u/${url}` %> class="text-muted" target="_blank" rel="noopener noreferrer"><%= url %></a></td>
            <td><%= urls[url].longURL %></td>
            <td><%= urls[url].created %></td>
            <td>&nbsp&nbsp&nbsp&nbsp<%= urls[url].visits %></td>
            <td>
              <form method="GET" action="/urls/<%= url %>">
                <button type="submit" class="btn btn-outline-secondary">Edit</button>
              </form>
            </td>
            <td>
              <form method="POST" action="/urls/<%= url %>/delete">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <!-- <a href="/urls/new">Click Here to Shorten a New URL!</a> -->
  </main>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>