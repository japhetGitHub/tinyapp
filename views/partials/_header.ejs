<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <% if (user) { %>
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create a New Short Link</a>
        </div>
        <form class="form-inline ml-auto" method="POST" action="/logout">
          <div class="form-group row">
            <label class="mx-auto col-form-label">Logged In As: <%= user.email %>!</label>
            <button type="submit" class="mx-2 btn btn-outline-dark">Logout</button>
          </div>
        </form>
        <% } else {%> 
          <form class="form-inline ml-auto" method="GET" action="/login">
            <div class="form-group">
              <button type="submit" class="mx-2 btn btn-outline-dark">Login</button>
            </div>
          </form>
          <form class="form-inline" method="GET" action="/register">
            <div class="form-group">
              <button type="submit" class="mx-2 btn btn-outline-dark">Register</button>
            </div>
          </form>
        <% } %> 
    </div>
  </nav>
</header>